{
  "mcpServers": {
    "mongodb-mcp": {
      "command": "npx",
      "args": [
        "-y",
        "@benborla29/mcp-server-mongodb"
      ],
      "env": {
        "MONGO_URI": "mongodb://localhost:27017/",
        "MONGO_DB_NAME": "admin",
        "MONGO_COLLECTION_NAME": "ordercollections",
        "ALLOW_INSERT_OPERATION": "true",
        "ALLOW_UPDATE_OPERATION": "true",
        "ALLOW_DELETE_OPERATION": "true"
      }
    }
  }
} 